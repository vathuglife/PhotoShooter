<Window x:Class="PhotoShooter.Popups.RenameImagePopup.RenameImagePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoShooter.Popups.RenameImagePopup"
        mc:Ignorable="d"
        Title="RenameImagePopup" Height="250" Width="400">
    <Grid>
        <Label Content="Enter a new name" HorizontalAlignment="Left" Margin="35,25,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="NewImageNameTextbox" HorizontalAlignment="Left" Margin="39,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="29"/>
        <Button x:Name="RenameImageButton" Content="Rename" HorizontalAlignment="Left" Margin="289,146,0,0" VerticalAlignment="Top" Width="68" Foreground="White" Background="#FF00B376" Click="RenameImage"/>
    </Grid>

</Window>
